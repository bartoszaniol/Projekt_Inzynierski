<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/dane.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Arsenal&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('includes/navigation.ejs') %>
      <main>
          <div class="info">
            <div class="dane">
                <div class="dane_nazwa">Temperatura w szklarni</div>
                <div class="dane_wartosc"><%= values.insideTemp %>°C</div>
                <div class="dane_czas">Czas pomiaru</div>
                <div class="dane_czas"><%= values.insideDate %></div>
            </div>
            <div class="dane">
                <div class="dane_nazwa">Wilgotność powietrza w szklarni</div>
                <div class="dane_wartosc"><%= values.insideHumid %>%</div>
                <div class="dane_czas">Czas pomiaru</div>
                <div class="dane_czas"><%= values.insideDate %></div>
            </div>
            <div class="dane">
                <div class="dane_nazwa">Temperatura gleby</div>
                <div class="dane_wartosc"><%= values.soilTemp %>°C</div>
                <div class="dane_czas">Czas pomiaru</div>
                <div class="dane_czas"><%= values.soilDate %></div>
            </div>
            <div class="dane">
                <div class="dane_nazwa">Wiglotność gleby</div>
                <div class="wartosc"><% if(parseFloat(values.soilHumid) > 35) {%> 👌 <% } else { %> 🏜️ <% } %></div>
                <div class="dane_czas">Ostatnie podlanie</div>
                <div class="dane_czas"><%= values.soilDate %></div>
            </div>
        </div>
        </div>
      </main>
      <%- include('includes/end.ejs') %>